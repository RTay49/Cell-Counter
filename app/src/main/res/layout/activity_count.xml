<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="personal.rtay49.cell_counter.Count">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/bottomRight" />
    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/topLeft"
        android:background="@drawable/countshape"
        android:layout_alignTop="@+id/topRight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp" />
    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/topRight"
        android:background="@drawable/countshape"
        android:layout_marginTop="42dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/topLeft"
        android:layout_marginStart="71dp" />
    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bottomRight"
        android:background="@drawable/countshape"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/topRight" />
    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bottomLeft"
        android:background="@drawable/countshape"
        android:layout_alignTop="@+id/bottomRight"
        android:layout_alignStart="@+id/topLeft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the cell corners"
        android:id="@+id/gridtext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/dilutionfac"
        android:background="@drawable/countshape"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/dilutext"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dilution Factor"
        android:id="@+id/dilutext"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculate"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/gridtext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/res"
        android:layout_alignBaseline="@+id/calculate"
        android:layout_alignBottom="@+id/calculate"
        android:layout_alignEnd="@+id/bottomRight" />


</RelativeLayout>
